<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <typeHandlers>
    <typeHandler handler="org.caotc.unit4j.support.mybatis.type.handler.AmountTypeHandler"/>
    <typeHandler handler="org.caotc.unit4j.support.mybatis.type.handler.UnitTypeHandler"/>
    <typeHandler
      handler="org.caotc.unit4j.support.mybatis.type.handler.SerializeCommandsTypeHandler"/>
  </typeHandlers>
  <plugins>
    <plugin interceptor="org.caotc.unit4j.support.mybatis.interceptor.AmountInterceptor">
      <property name="someProperty" value="100"/>
    </plugin>
    <plugin interceptor="org.caotc.unit4j.support.mybatis.interceptor.ResultSetHandlerInterceptor">
      <property name="someProperty" value="101"/>
    </plugin>
  </plugins>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/>
      <dataSource type="POOLED">
        <property name="driver" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:./src/test/resources/h2/unt4j-test"/>
        <!--        <property name="username" value="sa"/>-->
        <!--        <property name="password" value=""/>-->
      </dataSource>
    </environment>
  </environments>
  <mappers>
    <mapper resource="mapper/DoctorTeamMemberMapper.xml"/>
  </mappers>
</configuration>